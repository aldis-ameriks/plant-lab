{
  "name": "api",
  "version": "1.0.0",
  "main": "src/index.ts",
  "license": "GPL-3.0",
  "scripts": {
    "dev": "nodemon --watch src --ext ts,graphql,mjml --exec 'ts-node' -r dotenv/config --files ./src/index.ts --delay 1",
    "start": "node build/src/index.js",
    "build": "tsc && copy **/*.{graphql,mjml} build",
    "test": "jest",
    "coverage": "jest --coverage",
    "lint": "eslint . --ext .ts --ignore-path .gitignore --ignore-pattern migrations/",
    "lint:fix": "eslint . --ext .ts --ignore-path .gitignore --ignore-pattern migrations/ --fix",
    "migrate": "export $(grep -v '^#' .env | xargs) && knex migrate:latest --knexfile helpers/knexfile.ts --cwd src",
    "migrate:make": "knex migrate:make --knexfile helpers/knexfile.ts --cwd src",
    "migrate:down": "export $(grep -v '^#' .env | xargs) && knex migrate:down --knexfile helpers/knexfile.ts --cwd src",
    "generate": "npm run generate:schema && npm run generate:entities",
    "generate:entities": "export $(grep -v '^#' .env | xargs) && pg-typegen --type --table-names -h '/* eslint-disable @typescript-eslint/no-explicit-any */' -e logs,log_level,knex_migrations,knex_migrations_lock --insert-types -o src/types/entities.ts postgres://$API_DATABASE_USERNAME:$API_DATABASE_PASSWORD@$API_DATABASE_HOST:$API_DATABASE_PORT/$API_DATABASE_NAME && prettier --write src/types/entities.ts && npm run lint:fix",
    "generate:schema": "graphql-codegen && prettier --write **/schema.ts && eslint --fix **/schema.ts",
    "docker:build": "docker build -t registry.kataldi.com/pm-api .",
    "docker:push": "docker push registry.kataldi.com/pm-api",
    "docker:build:push": "npm run docker:build && npm run docker:push",
    "docker:run": "docker run -p 4000:4000 --name am-api --rm registry.kataldi.com/pm-api"
  },
  "dependencies": {
    "@fastify/cors": "8.2.0",
    "@fastify/helmet": "10.1.0",
    "@fastify/rate-limit": "7.6.0",
    "@fastify/under-pressure": "8.2.0",
    "ajv": "8.11.2",
    "ajv-formats": "2.1.1",
    "cron": "1.8.2",
    "fast-glob": "3.2.12",
    "fastify": "4.10.2",
    "graphql": "16.6.0",
    "graphql-tag": "2.12.6",
    "knex": "2.3.0",
    "mercurius": "11.4.0",
    "mercurius-auth": "3.0.0",
    "pg": "8.8.0",
    "pino": "8.8.0",
    "tiny-lru": "10.0.1"
  },
  "devDependencies": {
    "@graphql-codegen/add": "3.2.3",
    "@graphql-codegen/cli": "2.16.1",
    "@graphql-codegen/typescript": "2.8.5",
    "@graphql-codegen/typescript-resolvers": "2.7.10",
    "@types/cron": "1.7.3",
    "@types/jest": "29.2.4",
    "@types/node": "18.11.17",
    "@typescript-eslint/eslint-plugin": "5.47.0",
    "@typescript-eslint/parser": "5.47.0",
    "copy": "0.3.2",
    "dotenv": "16.0.3",
    "eslint": "8.30.0",
    "eslint-config-prettier": "8.5.0",
    "jest": "29.3.1",
    "nock": "13.2.9",
    "nodemon": "2.0.20",
    "pg-typegen": "3.3.4",
    "prettier": "2.8.1",
    "ts-jest": "29.0.3",
    "ts-node": "10.9.1",
    "typescript": "4.9.4"
  }
}
