{
  "name": "api",
  "version": "1.0.0",
  "main": "src/index.ts",
  "license": "GPL-3.0",
  "scripts": {
    "dev": "nodemon --watch src --ext ts,graphql,mjml --exec 'ts-node' -r dotenv/config --files ./src/index.ts --delay 1",
    "start": "node build/src/index.js",
    "build": "tsc && copy **/*.{graphql,mjml} build",
    "test": "jest --runInBand",
    "coverage": "jest --runInBand --coverage",
    "lint": "eslint . --ext .ts --ignore-path .gitignore --ignore-pattern migrations/",
    "lint:fix": "eslint . --ext .ts --ignore-path .gitignore --ignore-pattern migrations/ --fix",
    "migrate": "export $(grep -v '^#' .env | xargs) && knex migrate:latest --knexfile helpers/knexfile.ts --cwd src",
    "migrate:make": "knex migrate:make --knexfile helpers/knexfile.ts --cwd src",
    "migrate:down": "export $(grep -v '^#' .env | xargs) && knex migrate:down --knexfile helpers/knexfile.ts --cwd src",
    "generate": "npm run generate:schema && npm run generate:entities",
    "generate:entities": "ts-node scripts/generateEntities.ts && npm run lint:fix && prettier src/types/entities.ts --write",
    "generate:schema": "graphql-codegen && prettier --write **/schema.ts && eslint --fix **/schema.ts",
    "docker:build": "docker build -t registry.aldisameriks.dev/pm-api .",
    "docker:build:mac": "docker buildx build --platform linux/amd64 --push -t registry.aldisameriks.dev/pm-api .",
    "docker:push": "docker push registry.aldisameriks.dev/pm-api",
    "docker:build:push": "npm run docker:build && npm run docker:push",
    "docker:run": "docker run -p 4000:4000 --name pm-api --rm registry.aldisameriks.dev/pm-api"
  },
  "dependencies": {
    "@fastify/cors": "8.3.0",
    "@fastify/helmet": "11.0.0",
    "@fastify/rate-limit": "8.0.3",
    "@fastify/under-pressure": "8.3.0",
    "ajv": "8.12.0",
    "ajv-formats": "2.1.1",
    "cron": "2.4.1",
    "fast-glob": "3.3.1",
    "fastify": "4.21.0",
    "graphql": "16.8.0",
    "knex": "2.5.1",
    "mercurius": "13.1.0",
    "mercurius-auth": "4.0.0",
    "pg": "8.11.3",
    "pino": "8.15.0",
    "tiny-lru": "11.0.1"
  },
  "devDependencies": {
    "@graphql-codegen/add": "5.0.0",
    "@graphql-codegen/cli": "5.0.0",
    "@graphql-codegen/typescript": "4.0.1",
    "@graphql-codegen/typescript-resolvers": "4.0.1",
    "@types/cron": "2.0.1",
    "@types/jest": "29.5.3",
    "@types/node": "20.5.1",
    "@typescript-eslint/eslint-plugin": "6.4.0",
    "@typescript-eslint/parser": "6.4.0",
    "copy": "0.3.2",
    "dotenv": "16.3.1",
    "eslint": "8.47.0",
    "eslint-config-prettier": "9.0.0",
    "jest": "29.6.2",
    "nock": "13.3.3",
    "nodemon": "3.0.1",
    "pg-typegen": "3.6.1",
    "prettier": "3.0.2",
    "ts-jest": "29.1.1",
    "ts-node": "10.9.1",
    "type-fest": "4.2.0",
    "typescript": "5.1.6"
  }
}
