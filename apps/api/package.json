{
  "name": "api",
  "version": "1.0.0",
  "main": "src/index.ts",
  "license": "GPL-3.0",
  "type": "module",
  "scripts": {
    "dev": "nodemon --watch src --ext ts,graphql,mjml --exec 'node --experimental-strip-types --no-warnings=ExperimentalWarning --import=dotenv/config ./src/index.ts' --delay 1",
    "tsc": "tsc",
    "test": "npm run test:setup && node --test --import=dotenv/config --experimental-strip-types --no-warnings=ExperimentalWarning --experimental-test-isolation=process --experimental-test-snapshots **/*.test.ts",
    "test:setup": "node --no-warnings=ExperimentalWarning --experimental-strip-types src/test-helpers/globalSetup.ts",
    "coverage": "node --no-warnings=ExperimentalWarning --experimental-strip-types src/test-helpers/globalSetup.ts && node --test --import=dotenv/config --experimental-strip-types --no-warnings=ExperimentalWarning --experimental-test-isolation=process --experimental-test-coverage --experimental-test-snapshots --test-coverage-lines=100 --test-coverage-branches=100 --test-coverage-include='src/**/*.ts' --test-coverage-exclude='src/**/*.test.ts' --test-coverage-exclude='src/test-helpers/**' **/*.test.ts",
    "lint": "eslint . --ext .ts --ignore-path .gitignore --ignore-pattern migrations/",
    "lint:fix": "eslint . --ext .ts --ignore-path .gitignore --ignore-pattern migrations/ --fix",
    "migrate:generate": "drizzle-kit generate --config src/helpers/drizzle.ts",
    "migrate:make": "drizzle-kit generate --custom --config src/helpers/drizzle.ts",
    "migrate": "export $(grep -v '^#' .env | xargs) && node --experimental-strip-types --no-warnings=ExperimentalWarning scripts/migrate.ts",
    "generate:schema": "graphql-codegen && prettier --write **/schema.ts && eslint --fix **/schema.ts",
    "docker:build": "docker build -t registry.aldisameriks.dev/pm-api .",
    "docker:build:mac": "docker buildx build --platform linux/amd64 --push -t registry.aldisameriks.dev/pm-api .",
    "docker:push": "docker push registry.aldisameriks.dev/pm-api",
    "docker:build:push": "npm run docker:build && npm run docker:push",
    "docker:run": "docker run -p 4000:4000 --name pm-api --rm registry.aldisameriks.dev/pm-api"
  },
  "dependencies": {
    "@fastify/cors": "9.0.1",
    "@fastify/helmet": "11.1.1",
    "@fastify/rate-limit": "9.1.0",
    "@fastify/under-pressure": "8.3.0",
    "ajv": "8.12.0",
    "ajv-formats": "3.0.1",
    "cron": "3.1.7",
    "drizzle-orm": "0.34.1",
    "fast-glob": "3.3.2",
    "fastify": "4.26.2",
    "graphql": "16.8.1",
    "mercurius": "14.1.0",
    "mercurius-auth": "5.0.0",
    "pino": "8.20.0",
    "postgres": "3.4.4",
    "tiny-lru": "11.2.6"
  },
  "devDependencies": {
    "@graphql-codegen/add": "5.0.2",
    "@graphql-codegen/cli": "5.0.2",
    "@graphql-codegen/schema-ast": "4.0.2",
    "@graphql-codegen/typescript": "4.0.6",
    "@graphql-codegen/typescript-resolvers": "4.0.6",
    "@types/node": "22.7.5",
    "@typescript-eslint/eslint-plugin": "7.7.1",
    "@typescript-eslint/parser": "7.7.1",
    "dotenv": "16.4.5",
    "drizzle-kit": "0.25.0",
    "eslint": "8.57.0",
    "eslint-config-prettier": "9.1.0",
    "nock": "13.5.4",
    "nodemon": "3.1.0",
    "prettier": "3.2.5",
    "type-fest": "4.16.0",
    "typescript": "5.6.3"
  }
}
