{
  "name": "api",
  "version": "1.0.0",
  "main": "src/index.ts",
  "license": "GPL-3.0",
  "type": "module",
  "scripts": {
    "dev": "nodemon --watch src --ext ts,graphql,mjml --exec 'node --env-file=.env ./src/index.ts' --delay 1",
    "tsc": "tsc",
    "test": "npm run test:setup && node --test --env-file=.env **/*.test.ts",
    "test:setup": "node --env-file=.env src/test-helpers/globalSetup.ts",
    "coverage": "node src/test-helpers/globalSetup.ts && node --test --env-file=.env --experimental-test-coverage --test-coverage-lines=100 --test-coverage-branches=100 --test-coverage-include='src/**/*.ts' --test-coverage-exclude='src/**/*.test.ts' --test-coverage-exclude='src/test-helpers/**' **/*.test.ts",
    "coverage:ci": "node src/test-helpers/globalSetup.ts && node --test --experimental-test-coverage --test-coverage-lines=100 --test-coverage-branches=100 --test-coverage-include='src/**/*.ts' --test-coverage-exclude='src/**/*.test.ts' --test-coverage-exclude='src/test-helpers/**' **/*.test.ts",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "migrate:generate": "drizzle-kit generate --config src/helpers/drizzle.ts",
    "migrate:make": "drizzle-kit generate --custom --config src/helpers/drizzle.ts",
    "migrate": "export $(grep -v '^#' .env | xargs) && node scripts/migrate.ts",
    "generate:graphql": "graphql-codegen && prettier --write **/types/graphql.ts && eslint --fix **/types/graphql.ts",
    "docker:build": "docker build -t registry.aldisameriks.dev/pm-api .",
    "dockesr:build:mac": "docker buildx build --platform linux/amd64 --push -t registry.aldisameriks.dev/pm-api .",
    "docker:push": "docker push registry.aldisameriks.dev/pm-api",
    "docker:build:push": "npm run docker:build && npm run docker:push",
    "docker:run": "docker run -p 4000:4000 --name pm-api --rm registry.aldisameriks.dev/pm-api"
  },
  "dependencies": {
    "@fastify/cors": "10.0.2",
    "@fastify/helmet": "13.0.1",
    "@fastify/rate-limit": "10.2.2",
    "@fastify/under-pressure": "9.0.3",
    "ajv": "8.17.1",
    "ajv-formats": "3.0.1",
    "cron": "3.5.0",
    "drizzle-orm": "0.39.1",
    "fast-glob": "3.3.3",
    "fastify": "5.2.1",
    "graphql": "16.10.0",
    "mercurius": "16.0.1",
    "mercurius-auth": "6.0.0",
    "pino": "9.6.0",
    "postgres": "3.4.5",
    "tiny-lru": "11.2.11"
  },
  "devDependencies": {
    "@eslint/js": "9.19.0",
    "@graphql-codegen/add": "5.0.3",
    "@graphql-codegen/cli": "5.0.4",
    "@graphql-codegen/schema-ast": "4.1.0",
    "@graphql-codegen/typescript": "4.1.3",
    "@graphql-codegen/typescript-resolvers": "4.4.2",
    "@types/node": "22.13.0",
    "drizzle-kit": "0.30.4",
    "eslint": "9.19.0",
    "eslint-config-prettier": "10.0.1",
    "nock": "14.0.0",
    "nodemon": "3.1.9",
    "prettier": "3.4.2",
    "type-fest": "4.33.0",
    "typescript": "5.7.3",
    "typescript-eslint": "8.22.0"
  }
}
