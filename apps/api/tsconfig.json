{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "node",
    "noEmit": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "strict": true,
    "skipLibCheck": true,
    "allowImportingTsExtensions": true,
    "useUnknownInCatchVariables": false
  },
  "include": ["src/**/*", "scripts"]
}
