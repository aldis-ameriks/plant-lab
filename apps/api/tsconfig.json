{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ESNext",
    "outDir": "build",
    "esModuleInterop": true,
    "noImplicitAny": false,
    "strict": true,
    "skipLibCheck": true,
    "incremental": true,
    "isolatedModules": true,
    "useUnknownInCatchVariables": false
  },
  "include": ["src/**/*", "scripts"]
}
